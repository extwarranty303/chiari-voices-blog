rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function getUserData() {
      // Safely access user data
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isAdmin() {
      return isAuthenticated() && getUserData().role == 'admin';
    }
    
    function isModerator() {
      return isAuthenticated() && (getUserData().role == 'admin' || getUserData().role == 'moderator');
    }

    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow update: if isOwner(userId) && (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']));
      allow create: if isOwner(userId);
      allow write: if isAdmin();
    }

    match /posts/{postId} {
      // Corrected Rule:
      // Public can read 'published' posts.
      // Admins/Mods can read any post (including drafts).
      allow read: if resource.data.status == 'published' || isModerator();
      
      // Only Admins/Mods can create/update/delete posts.
      allow write: if isModerator(); 
    }

    match /comments/{commentId} {
      allow read; // Public can read all comments
      allow create: if isAuthenticated();
      allow update, delete: if isOwner(resource.data.userId) || isModerator();
    }

    match /journalEntries/{journalEntryId} {
      allow read, write, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null;
    }
  }
}
