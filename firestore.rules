rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper to get user data
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Helper to check if user is admin or moderator based on Firestore document
    function isStaff() {
      return isAuthenticated() && (getUserData().role == 'admin' || getUserData().role == 'moderator');
    }

    // Users Collection
    match /users/{userId} {
      // Users can read and write their own profile (covers create, update, delete)
      // We check against the userId path parameter, so this works for creation too
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
      // Staff might need to read user profiles
      allow read: if isStaff(); 
    }

    // Posts Collection
    match /posts/{postId} {
      // Public read access
      allow read: if true;
      // Only staff can write/update/delete posts
      allow write: if isStaff();
    }

    // Journal Entries Collection
    match /journalEntries/{entryId} {
      // Split write into create vs update/delete to handle 'resource.data' safely
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Comments Collection
    match /comments/{commentId} {
      allow read: if true;
      allow create: if isAuthenticated();
      // Users can delete their own comments, staff can delete any
      allow delete: if isAuthenticated() && (resource.data.userId == request.auth.uid || isStaff());
    }
  }
}
